    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.12",
    "@nestjs/typeorm": "^7.1.5",
    "class-transformer": "^0.3.1",
    "dotenv": "^8.2.0",
    "handlebars": "^4.7.6",
    "joi": "^17.4.0",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "nest-winston": "^1.4.0",
    "nodemailer": "^6.4.18",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.31",
    "typeorm-naming-strategies": "^2.0.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/testing": "7.4.4",
    "@types/express": "4.17.8",
    "@types/jest": "26.0.14",
    "@types/joi": "^14.3.4",
    "@types/node": "14.11.8",
    "@types/supertest": "2.0.10",
    "jest": "26.5.2",
    "prettier": "2.1.2",
    "supertest": "5.0.0",
    "ts-jest": "26.4.1",
    "ts-loader": "^8.0.17",
    "ts-node": "9.0.0",
    "tsc-watch": "4.2.9",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "typescript": "4.0.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
